page{
  color: #777;
}
.search {
  padding: 5rpx 20rpx;
}

.section {
  display: flex;
  padding: 10rpx;
  height: 58rpx;
  font-size: 14px;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  background-color: #f5f5f5;
  border: 1px solid #e0e0e0;
  border-right: 0;
}

.section image, .section icon {
  vertical-align: middle;
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
  text-align: center;
  font-size: 25px;
}

.section input {
  height: 60rpx;
  font-size: 14px;
}

.search button {
  margin: 0;
  background: #ec5151;
  border: 1px solid #df4141;
  color: #fff;
  width: 144rpx;
  height: 80rpx;
  font-size: 16px;
}

.search .section {
  flex: 1;
}
.lmplList{
  font-size: 14px;
}
.lmplList image{
  width: 24rpx;
  height: 24rpx;
}
/* 商品栏目 开始*/

.splm .lmplList{
    flex: 1;
    text-align: center;
    line-height:96rpx;
}
.splm .lmplList.flex{
    justify-content: center;
    align-items: center;
}
.splm .lmplList image{
  margin-left: 10rpx;
}
/* 商品栏目结束 */

/* 商品列表 开始*/
.shopListGroup{
  padding: 10rpx  0;
  float:left;
  width: calc(50% - 2.5px);
  font-size: 12px;
  background-color: #fff;
}
.shopListGroup:nth-child(even){
  margin-left: 5px; 
}
.shopListGroup image{
  width: 100%;
}
.shopListGroup .title{
  padding: 10rpx;
  line-height: 36rpx;
}
.shopListGroup .title .zhekou{
  background-color: #EC5151;
  padding: 4rpx 15rpx;
  color: #fff;
  border-radius: 10px;
}
.shopListGroup .price{
  line-height: 40rpx;
}
.shopListGroup  .newPrice{
  font-size: 14px;
  color: #EC5151;
}
.shopListGroup .oldPrice{
  text-decoration: line-through;
}
/* 商品栏目结束 */
.footer{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 12px;
  text-align: center;
}
/* pages/classify/classify.wxss */

/*侧边栏的样式*/
page{
  font-size: 12px;
  color: #777;
  background:#f5f5f5;
  padding-top: 20rpx;
  height: 100%;
  text-align: center;
  box-sizing:border-box;
}
.navs {
  width: 27%;
  height: 100%;
  overflow: hidden;
}
.scrollBox{
  position : relative;
  overflow: hidden;
  height: calc(100vh - 10px);
}


.navs .navItem{
  display: block;
  padding: 30rpx 18rpx;

}
.navs  .active{
    color: #ec5051;
    border-left: 2px solid #ec5051;
    background-color: rgb(247, 247, 247) !important;
}
/* 侧边栏样式结束 */

/*右侧栏目详情样式*/
.contents{
  flex: 1;
  padding-left: 30rpx;
  background-color:rgb(247, 247, 247) !important;
}
.contents .head{
  font-size: 14px;
  font-weight: 500;
  color: #666;
  text-align: left;
  padding: 30rpx 0;
}
.contents .items{
  justify-content: start;
  flex-wrap: wrap;
}
.contents .items .navi{
 
  width: 33.33%;
  padding-bottom: 10rpx;
}
.navi .keyword{
  padding: 15rpx 0;
   margin-right: 20rpx; 
   border: 1px solid #e5e5e5;
   border-radius: 10rpx;
}

/* 右侧栏目详情样式结束 */

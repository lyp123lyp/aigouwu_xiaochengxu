/* pages/cart/cart.wxss */
page{
  background-color: #f5f5f5;
  font-size: 14px;
  color:#777;
}
.cartList{
  margin-top: 14rpx;
}
.cartListGroup{
  display: flex;
  padding: 20rpx  0;  
  border-bottom: 1px solid #f5f5f5;
  margin-bottom: 10rpx;
}
.cartListGroup .checkbox{
  width: 17%;
  padding-top: 80rpx; 
  text-align: center;
}
.cartListGroup .checkbox checkbox{
  margin-left: 10rpx; 
}
.cartListGroup  .img{
  width: 30%;
  margin-right: 20rpx;
}
.cartListGroup .detailDisc{
  /* width: 53%; */
  flex: 1;
  padding: 0 20rpx;
}
.cartListGroup .detailDisc .title{
  line-height: 40rpx;
  max-height:801rpx;
  overflow:hidden;
}
.cartListGroup .detailDisc disc{
  max-height:80rpx;
  overflow:hidden;
}
.cartListGroup .price{
  margin: 10rpx 0;
  line-height:60rpx;
  color: #EC5151;
}
.cartListGroup .count{
  display: flex;
  height: 64rpx;
  width: 70%;
  margin-left: auto;
}
.cartListGroup .count button{
  margin: 0 20rpx;
  color: #777;
  padding: 0;
  line-height: 58rpx;
  text-align: center;
  height: 60rpx;
  width: 60rpx;
}
.cartListGroup .count input{
 width: 25%;
 border: 1px solid #e0e0e0;
 height: 60rpx;
 padding-left: 10rpx; 
}
.cartListGroup .count .delete{
  width: 64rpx;
  margin-left: 30rpx;
  height: 60rpx;
}
.cartListGroup .count .delete image{
  width: 100%;
}
.img image{
  width: 100%;
}
/* 底部结算部分 */
.pay{
  position: absolute;
  left: 0; 
  bottom: 0;
  display: flex;
  padding: 24rpx;
  width: 100%;
  height: 86rpx;
  border-top: 1px solid #e5e5e5;
  background-color: #fff;

}
.pay .checkAll{
  width: 25%;
  text-align :center;
  line-height: 86rpx;
}
.pay .checkAll checkbox-group{
  padding-left: 16rpx; 
  text-align: left;
}
.pay .tatol{
   width:35%;
   padding-left: 20rpx;
   line-height: 40rpx;
}
.pay .tatol .tatolMoney{
  color: #EC5151;
  font-size: 16px;
  line-height: 46rpx;
}
.pay .jiesuan{
  width: calc(40% - 10px);
}
 
/* pages/order/order.wxss */
page{
  padding-top: 20rpx;
  font-size: 12px;
  color: #777;
  background-color: #f5f5f5;
}
.contain{padding: 0 20rpx;}
.myOrderList{
  padding: 12rpx 12rpx 0;
  font-size: 14px;
  text-align: center;
  line-height: 60rpx;
}
.myOrderList .item{
  flex: 1;
  padding-bottom: 12rpx;
}
.myOrderList .click{
  color: #EC5151;
  border-bottom: 2px #EC5151 solid;
}

/* 订单提示 */
.alert {
    padding: 15px;
    margin-bottom: 20px;
    border: 1px solid transparent;
    border-radius: 4px;
    font-size: 14px;
}
.alert-danger {
    background-color: #f2dede;
    border-color: #ebccd1;
    color: #a94442;
}
.strong{
  font-weight: 600;
  letter-spacing: 2px;  
}
.orderNum{
  line-height: 96rpx;
  letter-spacing: 0;
}

/* 订单列表部分 */
.switchPool{
  margin-bottom: 20rpx;
  height: 470rpx;
}
.switchPool .orderNum {
  padding: 0 20rpx;

}
.switchPool .orderNum .time{
  /* margin-right: 60rpx; */
  width: 38%;
}
.proDetail{
  /* background-color: #f5f5f5;  */
}
.proDetail .img{
  width: 150rpx;
  margin-right: 20rpx;
}
.proDetail .img image{
  width: 100%;
}
.proDetail .disc{
  flex: 1;
 flex-direction: column;
 line-height: 37.5rpx;
}
.oldPrice{
  text-decoration: line-through;
}
.tatol{
  text-align:right;
  line-height: 70rpx;
  border-bottom: 1px solid #e5e5e5; 
}
.tatol .num {
  font-size: 14px;
  color: #333;
  margin-right: 8rpx;
}
.order_show_del{
  color: #333;
  line-height: 70rpx;
  justify-content: flex-end;
}
.order_show_del .btn{
 border: 1px solid #e5e5e5;
 padding:0 30rpx; 
 margin-left: 20rpx;
 border-radius: 10rpx;
}
.order_show_del .hlike{
  border: 1px solid #EC5151;
}